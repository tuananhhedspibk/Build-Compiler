PROGRAM HeapSort;
VAR	N : INTEGER;
	A : Array(.100.) OF INTEGER;
	I : INTEGER;
PROCEDURE SWAP(A : INTEGER; B : INTEGER);
VAR 	TEMP : INTEGER;
BEGIN
	TEMP := A;
	A := B;
	B := TEMP;
END;

PROCEDURE MAXHEAPFY(I:INTEGER ; N:INTEGER);
VAR 	LARGEST : INTEGER;
	LEFT 	: INTEGER;
	RIGHT 	: INTEGER;
BEGIN
	LARGEST := I;
	LEFT 	:= 2*I;
	RIGHT	:= 2*I + 1;
	IF LEFT <= N THEN
		BEGIN
			IF A(.LEFT.) > A(.I.) THEN LARGEST := LEFT;
		END;
	IF RIGHT <= N THEN
		BEGIN
			IF A(.RIGHT.) > A(.I.) THEN LARGEST := RIGHT;
		END;
	IF LARGEST != I THEN CALL SWAP(A(.I.), A(.LARGEST.));
	CALL MAXHEAPFY(LARGEST, N);
END;

PROCEDURE BUILDMAXHEAP;
BEGIN
	FOR I:= N/2 TO 1 DO
		CALL MAXHEAPFY(I, N);
END;

PROCEDURE HEAPSORT;
BEGIN
	FOR I := N TO 2 DO
		BEGIN
			CALL SWAP(A(.1.),A(.i.));
			CALL MAXHEAPFY(1, i - 1);	
		END;
END;

BEGIN
	N := READI;
	CALL BUILDMAXHEAP;
	FOR I := 1 TO N DO
		BEGIN
			A(.i.) := READI; 
		END;
	CALL HEAPSORT;
	FOR I := 1 TO N DO
		BEGIN
			CALL WRITEI(A(.i.));
		END;
END.
